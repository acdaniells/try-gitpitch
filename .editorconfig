# EditorConfig (editorconfig.org)

# This is the project's root directory
root = true

[*]
# The files are utf-8 encoded
charset = utf-8
# Use Unix line endings
end_of_line = lf
# Use spaces for indentation
indent_style = space
# A file must end with an empty line
insert_final_newline = true
# No white space at the end of line
trim_trailing_whitespace = true

[*.css]
# 2 space indentation
indent_size = 2

[*.md]
# 2 space indentation
indent_size = 2

[*.py]
# 4 space indentation
indent_size = 4
# A line should not exceed 88 characters (not supported by all plug-ins)
max_line_length = 88

[*.yaml]
# 2 space indentation
indent_size = 2
